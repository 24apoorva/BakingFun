<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/widget_8dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_8dp"
        app:cardCornerRadius="@dimen/d_12dp"
        app:cardElevation="@dimen/dp_3">

        <TextView
            android:id="@+id/widget_list_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/d_5dp"
            android:gravity="center"
            android:background="@drawable/selector_list"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="@string/applePie" />

    </android.support.v7.widget.CardView>

</LinearLayout>